<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainJuego">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Imagen de la portería -->

        <!-- Imagen del balón -->

        <View
            android:id="@+id/goalArea"
            android:layout_width="390dp"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="70dp"
            android:layout_marginVertical="580dp"
            android:layout_marginBottom="587dp"
            android:background="@android:color/holo_red_light" />



        <ImageView
            android:id="@+id/arco"
            android:layout_width="500dp"
            android:layout_height="165dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="530dp"
            android:layout_marginBottom="590dp"
            android:src="@drawable/arco1" />

        <ImageView
            android:id="@+id/movingImage"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginVertical="170dp"
            android:src="@drawable/arquero" />

         <!-- Cambia @drawable/ball por la imagen que desees usar -->

        <!-- Botón para lanzar el penal -->

        <!-- Botón para lanzar el penal hacia la derecha -->

        <ImageView
            android:id="@+id/ball"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"

            android:layout_marginVertical="390dp"
            android:src="@drawable/ball" />

        <!-- Texto para mostrar el resultado -->

        <Button
            android:id="@+id/leftButton"
            android:layout_width="119dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="93dp"
            android:text="⬅️"
            android:textSize="40dp"
            app:backgroundTint="@null"
            android:background="@drawable/green_custom"/>

        <Button
            android:id="@+id/rightButton"
            android:layout_width="119dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="93dp"
            android:text="➡️"
            android:textSize="40dp"
            app:backgroundTint="@null"
            android:background="@drawable/green_custom"/>

        <Button
            android:id="@+id/shootButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Chutar"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            app:backgroundTint="@null"

            android:background="@drawable/red_custom"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginVertical="620dp"
            android:backgroundTint="@null"
            android:text="De Nuevo" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Mira que te Como Hermano!"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/leftButton"
            android:layout_marginBottom="16dp"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡GOOOL!🏆"
            android:textSize="65sp"
            app:backgroundTint="@null"
            android:background="@drawable/yellow_custom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>