<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AgregarActivity">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginVertical="89dp"
        android:layout_marginHorizontal="50dp"
        android:layout_alignParentRight="true"
        android:text="Registro de Productos"
        android:textColor="@color/md_black_1000"
        android:textSize="28sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="380dp"
        android:background="@drawable/green_custom"
        android:text="Agregar âœ”ï¸"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="553dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/blue_custom"
        android:text="Mostrar ðŸ‘€"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnModificar"

        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="490dp"
        android:background="@drawable/blue_custom"
        android:text="Modificar ðŸ”§"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="622dp"
        android:background="@drawable/blue_custom"
        android:text="Limpiar ðŸ§¹"
        android:layout_marginHorizontal="40dp"
        app:backgroundTint="@null" />

    <EditText
        android:id="@+id/etIdProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"

        android:hint="Codigo"
        android:inputType="number" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etIdProducto"
        android:layout_alignStart="@+id/etIdProducto"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Nombre prod."
        android:textStyle="bold"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etNombre"
        android:layout_below="@+id/etNombre"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="number"
        android:hint="precio" />

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etPrecio"
        android:layout_below="@+id/etPrecio"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="cantidad" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="695dp"
        android:layout_marginRight="10dp"
        android:layout_weight=".1"
        android:backgroundTint="@color/red3"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_delete" />

</RelativeLayout>

